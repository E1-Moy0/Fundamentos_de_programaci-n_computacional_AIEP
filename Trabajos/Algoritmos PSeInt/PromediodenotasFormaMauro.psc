Algoritmo Promediodenotas
	
	Escribir "Ingrese las notas, Utilice una escala de 1 a 7"
	
	n<-5
	
	p<-0
	
	Mientras n<>0 Hacer
		
		leer a
		
		p=p+a
		
		n=n-1
		
	FinMientras
	
	prom<-p/5
	
	si prom >=4.0
		
		Escribir "prmedio " prom " aprobado"
		
	SiNo
		
		Escribir "promedio " prom " repobrado"
		
	FinSi
	
	
	
	
	
FinAlgoritmo
